// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName  String
  patronymic String
  lastName   String

  @@map("users")
}

model Class {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  createdBy Int
  updatedAt DateTime @updatedAt
  updatedBy Int

  title     String
  time      DateTime
  location  String
  classroom String
  teacher   String

  @@map("classes")
}
